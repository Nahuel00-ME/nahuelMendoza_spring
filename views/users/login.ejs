<%-include("../partials/header.ejs") %> 
<main>
    <section>
    <div class="caja1-form">
        <div class="container-formulario"> 
            <h2>Login</h2>
        <form action="/users/loginProceso" method="post">
          <img src="/images/logoNuevo.png" alt="Logo"  width="300px" height="270px">
          <div>
             <label for="email">Email:</label>
              <input type="email" id="email" name="email" value="<%= locals.email ? email : null %>" >
           <% if(locals.errores && locals.errores.email) {%>
              <p class="msg-error"> <i class="fa-solid fa-circle-exclamation"></i><%= errores.email.msg %></p>
            <% } %>
          </div>
            <div>
              <label for="password">Contrase√±a:</label>
              <input type="password" id="contrasena" name="contrasena" value="<%= locals.contrasena ? contrasena :null %>">
            </div>
            <% if(locals.errores && locals.errores.contrasena) {%>
              <p class="msg-error"> <i class="fa-solid fa-circle-exclamation"></i><%= errores.contrasena.msg %></p>
            <% } %>
              <button type="submit">Ingresar</button> 
                </form>
        </div>
    </div>
</section>
    </main>

